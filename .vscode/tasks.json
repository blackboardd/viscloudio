{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docs",
      "type": "shell",
      "command": "./make.bat html",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "coconut",
      "type": "shell",
      "command": "coconut src/viscloudio dist/viscloudio",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "install dependencies",
      "type": "shell",
      "command": "pushd dist && poetry install && popd",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "linter",
      "type": "shell",
      "command": "flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics && flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
