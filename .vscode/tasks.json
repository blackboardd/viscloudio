{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docs",
      "type": "shell",
      "command": "sphinx-build -b html src docs/build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "install dependencies",
      "type": "shell",
      "command": "pushd dist && poetry install && popd",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "compile-format",
      "type": "shell",
      "command": "coconut --minify src/viscloudio dist/viscloudio && python -m black dist/viscloudio",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
