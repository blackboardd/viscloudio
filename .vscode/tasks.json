{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docs",
      "type": "shell",
      "command": "sphinx-build -b html src docs/_build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "install dependencies",
      "type": "shell",
      "command": "poetry install",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "compile-format",
      "type": "shell",
      "command": "coconut --minify src/viscloudio && python -m black src/viscloudio",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
