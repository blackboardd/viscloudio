{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docs",
      "type": "shell",
      "command": "sphinx-build -b html src docs/build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "install dependencies",
      "type": "shell",
      "command": "pushd dist && poetry install && popd",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "lint-and-compile",
      "type": "shell",
      "command": "coconut --minify src/viscloudio dist/viscloudio && flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics && flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
